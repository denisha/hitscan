<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="283dp"
        android:layout_height="377dp"
        android:layout_marginRight="48dp"
        android:clickable="true"
        android:contentDescription="@scan_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417"
        app:srcCompat="@drawable/scan_button" />

    <TextView
        android:id="@+id/Text"
        style="@android:style/Widget.Material.Light.EditText"
        android:layout_width="305dp"
        android:layout_height="72dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@android:string/selectTextMode"
        android:ems="10"
        android:text="Ready. . . Aim . . . Fire!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:contentDescription="@android:string/selectTextMode"
        android:ems="10"
        android:text="Tap To Scan"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="380dp"
        tools:text="Tap To Scan" />

</android.support.constraint.ConstraintLayout>